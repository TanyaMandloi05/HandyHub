<% layout("/layouts/boilerplate") -%>
  <div class="row g-3 offset-md-1 offset-0">
<div class="container mt-4 "> 
<% if (orders.length === 0) { %>
  <div class="alert alert-info text-center">
    You haven't placed any orders yet.
  </div>
  </div>
<% } else { %>
   <h1 class="text-center mb-5">My Orders</h1>
  <div class="row g-3">
    <% orders.forEach(order => { %>
       <div class="col-md-3">
        <div class="card shadow-sm" style="width: 100%; height: 380px;">
	<img src="<%= order.products[0].product.image %>" class="card-img-top" style="height: 150px; object-fit: cover;" />

 	    <div class="card-body p-2">
 <p class="card-text mb-2 text-muted" style="font-size: 0.9rem;"><%= order.createdAt.toDateString() %></p>
 <p class="mb-2 " style="font-size: 0.9rem;">
              <p class="text-muted"> total items:
              <span>
  <%= order.products.reduce((sum, item) => sum + item.quantity, 0) %>
</span>
             </p>
             <p class="text-muted"> new Price :
              <span >â‚¹<%= order.totalPrice.toFixed(2) %></span>
              </p>
            </p>
            <h6 class="mt-3">Ordered Items:</h6>
            <ul class="list-group">
              <% order.products.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= item.product.title %>
                  <span>Qty: <%= item.quantity %></span>
                </li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    <% }); %>
    </div>
  </div>
<% } %>
</div>

